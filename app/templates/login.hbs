<div class="container center-align">
  <div class="row">
    <div class="col s12 m6 offset-m3 l4 offset-l4">
      <div class="card">
        <div class="card-content">
          <span class="card-title">Login</span>
          <form {{action "authenticate" on="submit"}}>
            <div class="row">
              <div class="input-field col s8 offset-s2">
                {{input value=user type="text"  data-error="right" class="validate"}}
                <label for="user">Username</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s8 offset-s2">
                {{input value=password type="password"  data-error="wrong" class="validate"}}
                <label for="password">Password</label>
              </div>
            </div>
            {{#if errorMessage}}
            <div class="row">
              <div class="col s12">
                <span class="red-text">{{errorMessage}}</span>
              </div>
            </div>
            {{/if}}
            <div class="row">
              <div class="col s6 offset-s3">
                <button class="btn waves-effect waves-light col s12" type="submit">Login
                  <i class="fa fa-sign-in right" aria-hidden="true"></i>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
