{{admin-navigation}}
<div class="container center-align">
  <div class="row">
    <div class="col s12">
      <h2>Blog Settings</h2>
    </div>
  </div>
    {{#with model.blog.firstObject as |blog|}}
    <form >
      <div class="row">
        <div class="card col s12 m8 offset-m2 l8 offset-l2">
            <div class="card-content">
              <span class="card-title">General Settings</span>

                <div class="row">
                  <div class="input-field col s8">
                    {{input value=blog.name type="text"  data-error="right" class="validate"}}
                    <label for="user">Blog Name</label>
                  </div>
                    {{md-select content=frameworks
                        value=blog.blogStatus
                        label="Status"
                        content=statuses
                        class="col s4"}}
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    {{input value=blog.settings.sub_title type="text"  data-error="right" class="validate"}}
                    <label for="user">Subtitle</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    {{input value=blog.settings.main_background_url type="text"  data-error="right" class="validate"}}
                    <label for="user">Background image URL</label>
                  </div>
                </div>
                <div class="row">
                    {{md-textarea label='Footer copyright text'
                        value=blog.settings.footer_copyright_text class="col s12"}}
                </div>
                <!-- which settings do i need??-->
                <!--
                General Blog Stuff:

                -->

            </div>
          </div>
        </div>
        <div class="row">
          <div class="card col s12 m8 offset-m2 l8 offset-l2">
              <div class="card-content">
                <span class="card-title">Social</span>
                <div class="row">
                  <div class="input-field col s12 m6 l6">
                    {{input value=blog.settings.social_twitter_link type="text"  data-error="right" class="validate"}}
                    <label for="user">Twitter link</label>
                  </div>
                  <div class="input-field col s12 m6 l6">
                    {{input value=blog.settings.social_facebook_link type="text"  data-error="right" class="validate"}}
                    <label for="user">Facebook link</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12 m6 l6">
                    {{input value=blog.settings.social_instagram_link type="text"  data-error="right" class="validate"}}
                    <label for="user">Instagram link</label>
                  </div>
                  <div class="input-field col s12 m6 l6">
                    {{input value=blog.settings.social_reddit_link type="text"  data-error="right" class="validate"}}
                    <label for="user">Reddit link</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12 m6 l6">
                    {{input value=blog.settings.social_googlep_link type="text"  data-error="right" class="validate"}}
                    <label for="user">Google+ link</label>
                  </div>
                  <div class="input-field col s12 m6 l6">
                    {{input value=blog.settings.social_youtube_link type="text"  data-error="right" class="validate"}}
                    <label for="user">Youtube link</label>
                  </div>
                </div>
              </div>
          </div>
        </div>
        <div class="row">
          <div class="col s2 offset-s5">
            <button class="btn waves-effect waves-light col s12" type="button"
                {{action "update" blog on="mouseUp"}}>Save
              <i class="fa fa-floppy-o right" aria-hidden="true"></i>
            </button>
          </div>
        </div>
      </form>
      {{/with}}

</div>
