<div class="row left-align">
  <div class="col s12 m12 l12">
    <div class="card">
            <div class="card-content">
              <span class="card-title"><h4>{{#link-to "post" (post-url post.title)}}{{post.title}}{{/link-to}}</h4></span>
              <p>{{post.user}} / {{moment-format post.created "MMMM DD, YYYY"}} /
                {{#each post.keywords as |keyword|}}
                {{#link-to "toKeyword" keyword}}{{keyword}} {{/link-to}}
                {{/each}}</p>
            </div>
            <div class="card-content">
                <p>{{{post.content}}}</p>
            </div>
            <div class="card-action">
              <a href="#">This is a link</a>
            </div>
    </div>
  </div>
</div>
