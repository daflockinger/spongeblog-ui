{{admin-navigation}}
<div class="container center-align">
  <div class="row">
    <div class="col s12">
      <h2>User Settings</h2>
    </div>
  </div>
        <div class="row">
          <div class="card col s12 m8 offset-m2 l8 offset-l2">
              <div class="card-content">
                <span class="card-title">Users</span>
                {{#md-card-collapsible }}
                    {{#md-collapsible icon="fa fa-plus" title='New user'}}
                      {{user-modal user=newUser}}
                    {{/md-collapsible}}
                 {{#each model.users as |user|}}
                    {{#md-collapsible icon="fa fa-pencil" title=(concat user.login ' / ' user.userStatus)}}
                        {{user-modal user=user}}
                    {{/md-collapsible}}
                    {{/each}}
                {{/md-card-collapsible}}
              </div>
          </div>
        </div>
</div>
